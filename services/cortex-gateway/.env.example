# ── Cortex Gateway — Environment Variables ─────────────────────────────
# Copy this file to .env and fill in your values.
# NEVER commit the actual .env file to source control.

# ── Supabase ───────────────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
# Use the service_role key for server-side operations (bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ── Google Gemini ──────────────────────────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro

# ── CORS — comma-separated origins ────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Logging ───────────────────────────────────────────────────────────
# Directory for daily JSONL audit logs (relative to the project root)
LOG_DIR=logs

# ── Server ────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
